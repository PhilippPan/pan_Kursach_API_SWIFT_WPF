<Page x:Class="HRApplicationWPF.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HRApplicationWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="385" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" KeyUp="txtPass_KeyUp">
            <TextBlock Margin="4">Login</TextBlock>
            <TextBox Name="txtLogin" ></TextBox>
            <Label Margin="4">Password</Label>
            <PasswordBox Height="37" FontSize="22" Name="txtPass"></PasswordBox>
            <Button Name="btnAuth" Margin="0,30,0,0" Click="btnAuth_Click" >Enter</Button>
        </StackPanel>
    </Grid>
</Page>
