<Page x:Class="HRApplicationWPF.Pages.AddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HRApplicationWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="385" d:DesignWidth="798"
      Title="AddPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5">
                    <TextBlock Margin="4">Login</TextBlock>
                    <TextBox Name="txtLogin" ></TextBox>
                    <TextBlock Margin="4">Password</TextBlock>
                    <TextBox Name="txtPass"></TextBox>
                    <TextBlock Margin="4">Role</TextBlock>
                    <ComboBox Height="31" Name="cmbRole"></ComboBox>
                    </StackPanel>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5">
                    <TextBlock Margin="4">Name</TextBlock>
                    <TextBox Name="txtName" ></TextBox>
                    <TextBlock Margin="4">Email</TextBlock>
                    <TextBox Name="txtEmail" ></TextBox>
                    <TextBlock Margin="4">Date of birth</TextBlock>
                    <DatePicker Height="31" Name="txtDate" FontSize="18"></DatePicker>
                </StackPanel>
            </StackPanel>
            <TextBlock Margin="4" HorizontalAlignment="Center">Status</TextBlock>
            <ComboBox Height="31" Name="cmbStatus" Width="160"></ComboBox>
            <Button Name="btnAddUser" Margin="0,30,0,0" Click="btnAddUser_Click" >Add</Button>
        </StackPanel>
    </Grid>
</Page>
